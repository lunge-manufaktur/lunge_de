= content_for :title_bar
	.row
		.small-12.columns
			h1 = @brand.name

.row
	.small-12.columns
		h4 Artikel

		dl.sub-nav
			dt Filter:
			dd.active
				a href="#" Beliebteste
			dd
				a href="#" Frisch eingetroffen
			dd
				a href="#" Angebote

.row
	.small-12.columns
		ul.small-block-grid-1.medium-block-grid-2.large-block-grid-4
			- @products.each do |product|
				= render "products/card", product: product

.row
	.small-12.columns
		= paginate @products

	.small-12.medium-4.large-3.large-offset-1.columns