<%= nested_form_for(@product) do |f| %>

  <div class="row">
    <div class="small-12 columns">
      <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
          <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">

    <div class="small-12 medium-6 large-6 columns">

      <div class="field">
        <%= f.label :name, "Bezeichnung" %><br>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :sku, "Artikelnummer" %><br>
        <%= f.text_field :sku %>
      </div>

      <div class="field">
        <%= f.label :brand_id, "Hersteller" %><br>
        <%= f.collection_select( :brand_id, Brand.all.sort_by { |brand| brand.name }, :id, :name ) %>
      </div>

      <div class="field">
        <%= f.label :size_id, "Größensystem" %><br>
        <%= f.collection_select( :size_id, Size.all, :id, :name ) %>
      </div>

      <div class="field">
        <%= f.check_box :is_published %>
        <%= f.label :is_published, "Veröffentlicht?" %>
      </div>

    </div>

    <div class="small-12 medium-6 large-6 columns">
      <div class="field">
        <%= f.label :description, "Beschreibung" %><br>
        <%= f.text_area :description, rows: 10 %>
      </div>

      <div class="field">
        <%= f.label :tag_list, "Tags" %><br>
        <%= f.text_field :tag_list %>
      </div>


    </div>

  </div>

  <div class="row">
    <div class="small-12 medium-6 columns">

      <%= f.fields_for :product_images %>
      <%= f.link_to_add "Bild hinzufügen", :product_images, class: "tiny button" %>

    </div>

    <div class="small-12 medium-6 columns">

      <%= f.fields_for :properties %>
      <%= f.link_to_add "Eigenschaft hinzufügen", :properties, class: "tiny button" %>
      
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <div class="actions">
        <%= f.submit "Speichern", class: "button" %>
      </div>      
    </div>
  </div>

<% end %>
