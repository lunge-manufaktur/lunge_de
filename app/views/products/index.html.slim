= render "products/search/index"

= content_for :title_bar
	.row
		.small-12.medium-9.columns
			h1 = Product.model_name.human(count: @products.count)

- if @tags
	section
		.panel
			| Aktive Filter: 
			- @tags.each do |tag|
				= tag_to_remove(tag)

.row
	.small-12.medium-8.large-9.columns
		h4 = page_entries_info @products
		ul.small-block-grid-1.medium-block-grid-2.large-block-grid-3
			- @products.each do |product|
				= render "products/card", product: product

	.small-12.medium-4.large-3.columns
		section
			= render "products/index/sidebar_search"
		section
			= render "products/index/sidebar_tags"

.row
	.small-12.columns
		section
			= paginate @products

.row
	.small-12.columns
		.actions
			= link_to "Artikel hinzuf√ºgen", new_product_path, class: "button"