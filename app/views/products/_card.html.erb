<ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-4">
	<% @products.each do |product| %>

		<li>
			
			<div class="item-card">
				<div class="card-section-full">
					<%= link_to (image_tag product.default_image("card"), class: "card-image-top"), product_path(product) %>
				</div>
				<div class="card-section-narrow">
					<h4 class="subtitle"><small><%= product.brand.name %></small></h4>
					<h4><%= link_to product.name, product_path(product) %></h4>
					<p><%= product.short_description(100) %></p>
					<h6><%= number_to_currency(product.current_price, unit: "â‚¬ ") %></h6>
				</div>
			</div>
		</li>

	<% end %>
</ul>