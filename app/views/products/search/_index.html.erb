<%= content_for :search do %>

	<div class="searchbar" id="search-toggle">
		<%= inline_icon("Suchen", "ion-ios7-search") %>
	</div>

	<div id="search" class="inverted" style="display:none;">

		<%= search_form_for @search do |f| %>
			
			<div class="row">
				<div class="small-12 medium-6 large-4 columns">

					<h4>Artikel</h4>

					<p>
						<%= f.label :name_cont, "Bezeichnung" %>
						<%= f.text_field :name_cont %>
					</p>

					<p>
						<%= f.label :sku_cont, "Artikelnummer" %>
						<%= f.text_field :sku_cont %>
					</p>

					<p>
						<%= f.label :description_cont, "Beschreibung" %>
						<%= f.text_field :description_cont %>
					</p>

					<p>
						<%= f.label :brand_id_eq, "Marke" %>
						<%= f.collection_select(:brand_id_eq, Brand.active, :id, :name, {prompt: "Marke auswÃ¤hlen..."}) %>
					</p>

				</div>

				<div class="small-12 medium-6 large-4 columns"></div>

				<div class="small-12 medium-6 large-4 columns"></div>
			</div>

			<div class="row">
				<div class="small-12 columns">
					<%= f.submit "Suchen", class: "button" %>
					<%= link_to "Alle anzeigen", products_path %>
				</div>
			</div>

	  <% end %>

	</div>

<% end %>