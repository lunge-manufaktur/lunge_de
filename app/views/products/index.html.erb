<%= render "products/search/index" %>

<!-- title bar -->

<%= content_for :title_bar do %>
  <h1>Produkte</h1>
  <dl class="sub-nav">
    <dt>Filter:</dt>
    <dd class="active"><a href="#">Alle</a></dd>
    <dd><a href="#">Neueste</a></dd>
    <dd><a href="#">Angebote</a></dd>
    <dd><a href="#">Highlights</a></dd>
  </dl>
<% end %>

<!-- content -->

<% if @tags %>
  <section>
    <p>
      Aktive Filter: 
      <% @tags.each do |tag| %>
        <span class="label alert">
          <%= tag.upcase %>
          <%= link_to inline_icon("", "ion-ios7-close-empty"),
            (if @tags.size > 1
              tag_products_path(@tags.reject{ |i| i == tag})
            else
              products_path
            end),
            class: "remove-tag"
          %>
        </span>
      <% end %>
    </p>
  </section>
<% end %>

<section>

<div class="row">
  <div class="small-12 columns">

      <hr>

      <%= search_form_for @search do |f| %>
      
      <div class="row">

        <div class="small-12 medium-4 columns">
            <%= f.label :name_cont, "Bezeichnung" %>
            <%= f.text_field :name_cont %>
        </div>

        <div class="small-12 medium-4 columns">
            <%= f.label :sku_cont, "Artikelnummer" %>
            <%= f.text_field :sku_cont %>
        </div>

        <div class="small-12 medium-4 columns">
            <%= f.label :brand_id_eq, "Marke" %>
            <%= f.collection_select(:brand_id_eq, Brand.active.distinct, :id, :name, {prompt: "Marke auswählen..."}) %>
        </div>

      </div>

      <div class="row">
        <div class="small-12 columns text-center">
          <%= f.submit "Suchen", class: "button" %><br>
          <%= link_to "Zurücksetzen", products_path %>
        </div>
      </div>

      <% end %>

      <hr>

  </div>
</div>

</section>

<div class="row">
  <div class="small-12 columns">

    <ul class="small-block-grid-1 medium-block-grid-3 large-block-grid-4">
      <% @products.each do |product| %>
        <%= render partial: "products/card", locals: { product: product } %>
      <% end %>
    </ul>

  </div>
</div>

<section>
  <%= paginate @products %>
</section>

<div class="row">
  <div class="small-12 columns">
    <div class="actions">
      <%= link_to "Artikel hinzufügen", new_product_path, class: "button" %>
    </div>
  </div>
</div>