= javascript_include_tag "vendor/modernizr"
= csrf_meta_tags
script type="text/javascript" src="//use.typekit.net/acr5efa.js"
javascript:
  try{Typekit.load();}catch(e){}

= nested_form_for @product do |f|
  .row
    .small-12.columns
      - if @product.errors.any?
        #error_explanation
          h2 = "#{pluralize(@product.errors.count, 'error')} prohibited this product from being saved:"
          ul
          - @product.errors.full_messages.each do |msg|
            li = msg

  .row
    .small-12.columns
      = f.fields_for :product_images
      = f.link_to_add "Bild hinzufÃ¼gen", :product_images, class: "small button expand"
      hr

  .row
    .small-12.columns
      .actions
        = f.hidden_field :stay_on_page, value: 1
        = f.submit "Speichern", class: "button large expand"

= javascript_include_tag "application", "data-turbolinks-track" => false