<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <p>
      <%= f.label :parent_id, "Übergeordnete Gruppe (optional)" %>
      <%= f.select :parent_id, nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" }, prompt: "Wähle eine übergeordnete Kategorie..." %>
    </p>
  </div>
  <div class="actions">
    <%= f.submit "Speichern", class: "button" %>
  </div>
<% end %>
