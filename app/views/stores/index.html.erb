<h1>Listing stores</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address name</th>
      <th>Street</th>
      <th>Zip</th>
      <th>City</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Active</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.address_name %></td>
        <td><%= store.street %></td>
        <td><%= store.zip %></td>
        <td><%= store.city %></td>
        <td><%= store.phone %></td>
        <td><%= store.email %></td>
        <td><%= store.active %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

