.title
  .container
    h1.marginless--bottom = @post.title
    h3.marginless--top = @post.subtitle

- if @post.post_images.any?
  section
    = image_tag @post&.post_images&.first.image.url(:large)

.container
  main
    article
      = simple_format(@post.content)
    aside
      .fields
        label Ver√∂ffentlicht am
        = l @post.created_at, format: :date_only
      .fields
        - if @post.categories.any?
          .fields
            label Eingeordnet in
            ul.no-bullet
              - @post.categories.each do |category|
                li = link_to category.name, category_path(category), class: "link"
      hr
      section
        - if policy(@post).edit?
          label Bearbeiten
          ul.no-bullet
            li = link_to "Bearbeiten", edit_post_path(@post), class: "link"